---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "My personal journey and notes on learning Artificial Intelligence.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-zinc-950 text-zinc-300 antialiased selection:bg-emerald-500/30 selection:text-emerald-200"
  >
    <div class="flex min-h-screen flex-col">
      <header
        class="sticky top-0 z-40 w-full backdrop-blur-md flex-none transition-colors duration-500 lg:z-50 border-b border-white/10 bg-zinc-950/80"
      >
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="py-4 flex items-center justify-between">
            <a
              class="flex items-center gap-2 text-xl font-bold tracking-tight text-white"
              href="/"
            >
              <div
                class="w-8 h-8 rounded-lg bg-linear-to-br from-emerald-400 to-cyan-500 flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-zinc-950"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              Learn<span class="text-emerald-400">AI</span>
            </a>
            <div class="hidden md:flex items-center gap-8">
              <nav class="text-sm font-medium text-zinc-400">
                <ul class="flex space-x-8">
                  <li>
                    <a
                      href="/machine-learning"
                      class="hover:text-white transition-colors"
                      >Machine Learning</a
                    >
                  </li>
                  <li>
                    <a
                      href="/deep-learning"
                      class="hover:text-white transition-colors"
                      >Deep Learning</a
                    >
                  </li>
                  <li>
                    <a
                      href="/generative-ai"
                      class="hover:text-white transition-colors"
                      >Generative AI</a
                    >
                  </li>
                </ul>
              </nav>
              <div class="flex items-center border-l border-white/10 pl-8">
                <a
                  href="https://github.com/dileepadev/learn-ai"
                  class="text-zinc-400 hover:text-white transition-colors"
                >
                  <span class="sr-only">GitHub</span>
                  <svg
                    viewBox="0 0 16 16"
                    class="w-5 h-5"
                    fill="currentColor"
                    aria-hidden="true"
                    ><path
                      d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
                    ></path></svg
                  >
                </a>
              </div>
            </div>
          </div>
        </div>
      </header>

      <main class="flex-auto">
        <slot />
      </main>

      <footer class="border-t border-white/10 mt-auto bg-zinc-950">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
          <p class="text-center text-sm text-zinc-500">
            &copy; {new Date().getFullYear()} Learn AI. Built with Astro and Tailwind
            CSS.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
